@model MGedik.PronunciationTest.WebSite.Models.TestItem
@{
    ViewBag.Title = "Test";
}

    <div class="container">
        <div class="image-wrap">
            <img src="@Url.Content(Model.ImagePath)" />
            <i class="fa fa-check" aria-hidden="true"></i>
            <i class="fa fa-times" aria-hidden="true"></i>
            <i class="fa fa-question-circle" id="question"></i>
        </div>
        <p class="text">@Model.Title</p>
    </div>
    <div class="controls">
        <div class="btn-group btn-group-justified" role="group" aria-label="...">
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-primary" id="record"><i class="fa fa-microphone" aria-hidden="true"></i> RECORD</button>
            </div>
            <div class="btn-group" role="group">
                <button type="button" class="btn btn-success" disabled="disabled" data-testtype="text" id="send"><i class="fa fa-paper-plane-o" aria-hidden="true"></i> SEND</button>
            </div>
        </div>
    </div>

    <script src="http://code.responsivevoice.org/responsivevoice.js"></script>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/audio")
