@model MGedik.PronunciationTest.WebSite.Models.SpeakTestItem
@{
    ViewBag.Title = "Speak Test";
}
<p class="writer">@Model.Question</p>
<p class="responseText" style="font-size: 20px"></p>
<div class="text-wrap">
    <i class="fa fa-check" aria-hidden="true"></i>
    <i class="fa fa-times" aria-hidden="true"></i>
</div>
<p class="text">@Model.Question</p>
<div class="controls">
    <div class="btn-group" role="group" aria-label="...">
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-primary" id="record"><i class="fa fa-microphone" aria-hidden="true"></i> RECORD</button>
        </div>
        <div class="btn-group" role="group">
            <button type="button" class="btn btn-success" disabled="disabled" data-testtype="speak" id="send"><i class="fa fa-paper-plane-o" aria-hidden="true"></i> SEND</button>
        </div>
    </div>
</div>


<script src="http://code.responsivevoice.org/responsivevoice.js"></script>
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/audio")
